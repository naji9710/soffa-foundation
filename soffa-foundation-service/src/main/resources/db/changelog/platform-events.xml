<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd"
        logicalFilePath="platform/events">

    <changeSet id="202109211400_Events" author="gahissy.titus">
        <createTable tableName="${table_prefix}events">
            <column name="id" type="varchar">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="event" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="data" type="varchar"/>
            <column name="application" type="varchar"/>
            <column name="user" type="varchar"/>
            <column name="date" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
